---
interface Props {
    title: string;
    category: string | string[];
    description: string;
    href: string;
}

const { title, category, description, href } = Astro.props;
const displayCategory = Array.isArray(category) ? category.join(', ') : category;
---

<a href={href} class="group block p-6 bg-white border border-stone-200 hover:border-accent transition-all duration-300 hover:shadow-lg rounded-sm">
    <div class="mb-4">
        <span class="text-xs font-bold tracking-wider text-accent uppercase">{displayCategory}</span>
        <h3 class="text-2xl font-serif font-semibold text-ink mt-2 group-hover:text-accent transition-colors">{title}</h3>
    </div>
    <p class="text-stone-600 line-clamp-3 leading-relaxed">
        {description}
    </p>
    <div class="mt-6 text-sm font-medium text-stone-400 group-hover:text-ink transition flex items-center gap-2">
        Ler mais
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover:translate-x-1 transition" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
    </div>
</a>
