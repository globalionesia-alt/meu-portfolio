---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={`${entry.data.title} - Ian Rodrigues`}>
    <div class="bg-stone-100 py-12 border-b border-stone-200">
        <div class="max-w-3xl mx-auto px-6">
            <a href="/" class="text-accent font-medium mb-6 inline-block hover:underline transition">&larr; Voltar para Home</a>
            <h1 class="text-3xl md:text-5xl font-serif font-bold text-ink mb-4 leading-tight">{entry.data.title}</h1>
            <div class="flex flex-wrap gap-4 text-sm text-stone-600 mb-2">
                 <span class="bg-white px-3 py-1 rounded border border-stone-200 font-medium uppercase tracking-wider text-xs flex items-center">{Array.isArray(entry.data.category) ? entry.data.category.join(', ') : entry.data.category}</span>
                 {entry.data.date && <time class="bg-white px-3 py-1 rounded border border-stone-200">{entry.data.date.toLocaleDateString('pt-BR')}</time>}
            </div>
        </div>
    </div>
    
    <article class="max-w-3xl mx-auto px-6 py-12 prose prose-stone prose-lg prose-headings:font-serif prose-a:text-accent">
        <div class="bg-white p-8 md:p-12 rounded-lg shadow-sm border border-stone-100">
             <Content />
        </div>
    </article>
</Layout>
